# Auto-detect text files and normalize to LF
* text=auto eol=lf

# Explicitly declare text files
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.md text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.html text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.mjs text eol=lf
*.py text eol=lf
*.sh text eol=lf
*.bat text eol=crlf
*.ps1 text eol=crlf

# Configuration files
*.config.js text eol=lf
*.config.mjs text eol=lf
*.config.ts text eol=lf
.eslintrc* text eol=lf
.prettierrc* text eol=lf
tsconfig*.json text eol=lf
package.json text eol=lf
package-lock.json text eol=lf

# Denote binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.pdf binary
*.db binary
*.sqlite3 binary
*.backup binary
*.bak binary

